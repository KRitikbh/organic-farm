<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="versionone.codistro.github.io.organicfarm.activities.UpdatePrice">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Price"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="20dp"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Cow Milk Price(per kg):"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/cow_milk_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:padding="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Buffalo Milk Price(per kg):"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/buffalo_milk_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:padding="10dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/update_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        />

</LinearLayout>
